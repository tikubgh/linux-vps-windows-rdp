sudo bash -c 'apt update -y && apt install -y software-properties-common && add-apt-repository -y ppa:mozillateam/ppa && echo -e "Package: *\nPin: release o=LP-PPA-mozillateam\nPin-Priority: 1001" > /etc/apt/preferences.d/mozilla-firefox && apt update -y && apt install -y firefox-esr && snap remove firefox || true && sed -i "/^#RemoveIPC/c\RemoveIPC=no" /etc/systemd/logind.conf || echo "RemoveIPC=no" >> /etc/systemd/logind.conf && echo "tmpfs /dev/shm tmpfs defaults,size=4G 0 0" >> /etc/fstab && mount -o remount,size=4G /dev/shm || true && systemctl restart systemd-logind xrdp && echo "Plain Firefox ESR installed â€“ full RAM & CPU allowed! Reboot: sudo reboot"'
