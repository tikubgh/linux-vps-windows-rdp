sudo bash -c 'apt update -y && apt install -y wget gnupg ca-certificates && wget -q -O - https://dl.google.com/linux/linux_signing_key.pub | gpg --dearmor -o /usr/share/keyrings/google-chrome-keyring.gpg && echo "deb [arch=amd64 signed-by=/usr/share/keyrings/google-chrome-keyring.gpg] https://dl.google.com/linux/chrome/deb/ stable main" > /etc/apt/sources.list.d/google-chrome.list && apt update && apt install -y google-chrome-stable && sed -i "s/^#RemoveIPC=.*/RemoveIPC=no/" /etc/systemd/logind.conf || echo "RemoveIPC=no" >> /etc/systemd/logind.conf && echo "tmpfs /dev/shm tmpfs defaults,size=2G 0 0" >> /etc/fstab && mount -o remount,size=2G /dev/shm 2>/dev/null || true && mkdir -p /etc/opt/chrome/policies/managed && echo "{\"HardwareAccelerationModeEnabled\":false,\"OzonePlatformHint\":\"auto\"}" > /etc/opt/chrome/policies/managed/xrdp-chrome.json && sed -i "s|Exec=/usr/bin/google-chrome-stable.*|Exec=/usr/bin/google-chrome-stable --no-sandbox --use-gl=egl %U|" /usr/share/applications/google-chrome.desktop && systemctl restart systemd-logind xrdp && echo "Chrome installed and XRDP-optimized! Reboot recommended: sudo reboot"'
